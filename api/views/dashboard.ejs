<%- include('./partials/header')  %>
<%- include('./partials/menu')  %>

<body>
    <div class="preloader da-none">
        <div class="loader"></div>
    </div>
    
    <main id="main mt-5  " class="ha-100 ">
        <!--==========================
      Services Section
    ============================-->
        <section id="services" class=" dashboardtop section-bg pb-1">
            <div class="container" id="my-class">
                <h4 class="text-center"><b>Wallet Address:</b> <span id="accounts"><%= session.accountId ? session.accountId : '' %></span></h4>
                <div id="chartdiv" style="width: 100%; height: 400px; background-color: #FFFFFF;"></div>

            </div>
            <p class="text-center mt-2 mb-2"><b> </b></p>

        </section><!-- #services -->

        <section id="why-us" class="wow fadeIn section-bg  pb-2"
            style="visibility: visible; animation-name: fadeIn;">


            <div class="container" id="my-class">
                <div class="row counters pt-0 justify-content-center" id="my-name">

                    <div class="  col-lg-4 col-md-6 col-sm-6 col-12 text-center ">
                        <div class="box">
                            <span>Total DFX</span>
                            <p><img src="web/img/DeFiXy-Icon.png" width="20"> <%= dashboard.balance.toFixed(2) +' '+ dashboard.symbol %></p>
                        </div>
                    </div>

                    <div class="  col-lg-4  col-md-6  col-sm-6 col-12  text-center ">
                        <div class="box">
                            <span>Total Staked</span>
                            <p><img src="web/img/DeFiXy-Icon.png" width="20"> <%= dashboard.stakeBalance.toFixed(2) +' '+ dashboard.symbol %></p>
                        </div>
                    </div>

                    <div class="    col-lg-4 col-md-6 col-sm-6 col-12 text-center ">
                        <div class="box">
                            <span>Staking Rank</span>
                            <p><%= dashboard.stakeRank %></p>
                        </div>
                    </div>

                    <div class=" col-lg-4  col-md-6   col-sm-6 col-12 text-center ">
                        <div class="box">
                            <span> Rewards</span>
                            <p><img src="web/img/DeFiXy-Icon.png" width="20"> <label id="lableReward" class="mb-0"><%= dashboard.reward.reward.toFixed(2) +' '+ dashboard.symbol %></label></p>
                        </div>
                    </div>
                    <div class="   col-lg-4 col-md-6 col-sm-6 col-12 text-center ">
                        <div class="box">
                            <span>Current Reward Rate</span>
                            <p> <%= dashboard.rate.rewardRate %>%</p>
                        </div>

                    </div>


                    <div class="container mt-4" id="contain">
                        <h5 class="text-center"> Staking Duration:</h5>
                        <div class="d-flex justify-content-center">
                            <ul class="pl-0">
                                <li><span id="days"></span>days</li>
                                <li><span id="hours"></span>Hours</li>
                                <li><span id="minutes"></span>Minutes</li>
                                <!-- <li><span id="seconds"></span>Seconds</li> -->
                            </ul>
                        </div>
                    </div>
                </div>

            </div>

        </section>

        <section class="mt-5 mb-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-4 col-4 text-right">
                        <button class="btn btn-primary btn-primarya  width-100 " onclick="claimReward()" <%= (!stakeUser) ? 'disabled' : '' %>>Claim Reward</button>
                    </div>
                    <% if(stakeUser){ %>
                    <div class="col-lg-4 col-md-4 text-right col-4">
                        <button class="btn btn-primarya btn-primary  width-100" onclick="unstake()">Unstake Tokens</button>
                    </div>
                    <% }else{ %>
                    <div class="col-lg-4 col-md-4 text-right col-4">
                        <button class="btn btn-primarya btn-primary width-100" data-toggle="modal" data-target="#stake-modal">Stake Tokens</button>
                    </div>
                    <% } %>
                    <div class="col-lg-4 col-md-4 text-right col-4">
                        <button class="btn btn-primarya btn-primary width-100" onclick="createStakingDetail()">Sync Blockchain Data</button>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <div class="modal fade" id="claim" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content ">
                <div class="modal-header border-bottom-0">
                    <h5 class="modal-title text-center" id="exampleModalLabel">Claim Your Rewards Before you unstake Tokens!
                    </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
    
                <div class="modal-footer  border-top-0 pt-0 justify-content-center">
                    <button type="button" class="btn btn-primary btn-primarya " data-toggle="modal" data-target="#modal-succsess1"
                        data-dismiss="modal">Claim Rewards</button>
                    <button type="button" class="btn btn-secondary btn-primarya " data-dismiss="modal">Cancel</button>
    
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content pt-3 pb-3">
                <div class="modal-header border-bottom-0   text-center">
                    <h5 class="modal-title  text-center" id="exampleModalLabel">Claim Your Rewards Before you unstake
                        Tokens!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
    
    
            </div>
        </div>
    </div>
    <div class="modal fade" id="stake-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content pt-0 pb-3">
                <div class="modal-header border-bottom-0 text-center">
                    <h5 class="modal-title  text-center" id="exampleModalLabel">Stake DFX Tokens</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="d-flex justify-content-center">
                    <div class="form-group p-2  pb-0 d-flex align-items-center " style="padding-bottom: 0px !important;">
                        <label class="mr-2 ">No. of Tokens:</label>
                        <input type="text" name="no-of-tokens" class="form-control max-150" id="no-of-tokens" placeholder="" data-rule="minlen:4" data-msg="Please enter at least 4 chars">
                        <div class="validation"></div>
                    </div>
                </div>
                <h6 class="m-3 text-center font-14" style="margin-top: 0px !important">Note: When tokens are unstacked/claimed, rewards resets & start from 15%</h6>
                <div class="modal-footer mt-0 pt-2 border-top-0 justify-content-center">
                    <button type="button" class="btn btn-primary btn-primarya " onclick="createStake()">Stake Tokens</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="stake-succsess-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content text-center">
                <div class="modal-header border-bottom-0">
                    <!-- <h5 class="modal-title" id="exampleModalLabel">Stake DFX Tokens</h5> -->
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="pad-20">
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    <h2 class="mb-0">Congratulations</h2>
                    <p>Token are staked successfully!</p>
    
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-succsess1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
    
            <div class="modal-content">
                <div class="modal-header text-center border-bottom-0">
                    <!-- <h5 class="modal-title" id="exampleModalLabel">Stake DFX Tokens</h5> -->
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="pad-20">
    
    
    
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    <h2 class="mb-0">Congratulations</h2>
                    <p class="pl-2 pr-2">Your Rewards has been claimed Successfully!</p>
    
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="modal-succsess2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
    
            <div class="modal-content">
                <div class="modal-header text-center border-bottom-0">
                    <!-- <h5 class="modal-title" id="exampleModalLabel">Stake DFX Tokens</h5> -->
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="pad-20">
    
    
    
                    <i class="fa fa-check-circle-o" aria-hidden="true"></i>
                    <h2 class="mb-0">Congratulations</h2>
                    <p class="pl-2 pr-2">Token has been Unstaked & Credited into your wallet Successfully!</p>
    
                </div>
            </div>
        </div>
    </div>

    <%- include('./partials/footer')  %>
    <script src="https://unpkg.com/mathjs@7.2.0/dist/math.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/big.js@5.2.2/big.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bignumber.js/8.0.2/bignumber.min.js" integrity="sha512-7UzDjRNKHpQnkh1Wf1l6i/OPINS9P2DDzTwQNX79JxfbInCXGpgI1RPb3ZD+uTP3O5X7Ke4e0+cxt2TxV7n0qQ==" crossorigin="anonymous"></script>
    <script src="https://cdn.plot.ly/plotly-1.35.2.min.js"></script>
    <script src="web/js/custom/countdown.js" type="text/javascript"></script>
    <script src="web/js/custom/vector-graph.js" type="text/javascript"></script>

    <script src="web/js/custom/dashboard.js" type="text/javascript"></script>
</body>


